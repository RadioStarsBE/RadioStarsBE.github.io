---
permalink: /rss.xml
layout: null
---
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <copyright>Copyright {{ site.time | date: '%Y' }}</copyright>
    <language>{{ site.lang | default: "en-us" }}</language>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/rss.xml" rel="self" type="application/rss+xml" title="{{ site.title }} - RSS 2.0" />
    <atom:link href="{{ site.url }}/feed.atom" rel="alternate" type="application/atom+xml" title="{{ site.title }} - Atom Feed" />
    <atom:link href="{{ site.url }}/feed.json" rel="alternate" type="application/json" title="{{ site.title }} - JSON Feed" />
    <atom:link href="{{ site.url }}/feed.rss" rel="alternate" type="application/rss+xml" title="{{ site.title }} - RSS 0.9x" />
    {% for post in site.posts %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>{{ site.url }}{{ post.url }}</link>
      <guid>{{ site.url }}{{ post.url }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <description>{{ post.excerpt | xml_escape }}</description>
    </item>
    {% endfor %}
  </channel>
</rss>
